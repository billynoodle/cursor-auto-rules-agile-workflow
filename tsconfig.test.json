{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@client/*": ["client/src/*"],
      "@server/*": ["server/src/*"],
      "@__mocks__/*": ["__mocks__/*"],
      "@mocks/*": ["__mocks__/*"],
      "@test/*": ["tests/*"],
      "../../../../client/src/*": ["client/src/*"],
      "../../../../server/src/*": ["server/src/*"],
      "../../../client/src/*": ["client/src/*"],
      "../../../server/src/*": ["server/src/*"],
      "../../client/src/*": ["client/src/*"],
      "../../server/src/*": ["server/src/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "__mocks__/**/*.ts",
    "__mocks__/**/*.tsx"
  ]
} 