{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["client/src/*"],
      "@server/*": ["server/src/*"],
      "@__mocks__/*": ["__mocks__/*"],
      "@test/*": ["tests/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./client/src/types"
    ],
    "plugins": [
      { "name": "typescript-plugin-css-modules" }
    ]
  },
  "include": [
    "client/src/**/*",
    "server/src/**/*",
    "tests/**/*",
    "__mocks__/**/*",
    "client/src/types/module-augmentation.d.ts"
  ],
  "exclude": ["node_modules"]
} 