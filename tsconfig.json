{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["server/src/*"],
      "@client/*": ["client/src/*"],
      "@tests/*": ["tests/*"]
    },
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "include": [
    "server/src/**/*",
    "client/src/**/*",
    "tests/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 